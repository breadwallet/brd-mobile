<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_button_default"
    android:animateLayoutChanges="true">

    <ImageView
        android:id="@+id/promotion_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationZ="2dp"
        android:translationY="-34dp"
        android:translationX="34dp"
        android:rotation="-10"
        app:layout_constraintTop_toTopOf="@+id/feature_promotion_logo"
        app:layout_constraintEnd_toEndOf="@+id/feature_promotion_logo"
        app:srcCompat="@drawable/ic_promotion_new" />

    <ImageView
        android:id="@+id/feature_promotion_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="27:32"
        app:layout_constraintWidth_percent=".7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="30dp"
        tools:src="@drawable/feature_promotion_buy"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@+id/feature_promotion_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/feature_promotion_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:textSize="28sp"
        android:fontFamily="@font/mobile_font_medium"
        app:lineHeight="36dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Buy &amp; sell is easier to than ever!"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/feature_promotion_logo"
        app:layout_constraintBottom_toTopOf="@+id/feature_promotion_subtitle" />

    <TextView
        android:id="@+id/feature_promotion_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:textSize="16sp"
        android:textColor="@color/white_transparent_75"
        android:fontFamily="@font/mobile_font_book"
        app:lineHeight="24dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@+id/feature_promotion_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Thereâ€™s no better time to fill those bags with our new streamlined interface. Time is money after all."
        app:layout_constraintBottom_toTopOf="@+id/buttonContinue" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        tools:text="Let me in!!!!"
        android:backgroundTint="@color/white"
        android:textColor="@color/primary_button_default"
        app:layout_constraintTop_toBottomOf="@+id/feature_promotion_subtitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/SecondaryButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
