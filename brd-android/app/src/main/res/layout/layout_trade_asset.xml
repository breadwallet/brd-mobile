<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white_transparent"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/primary_button_default">

    <FrameLayout
        android:id="@+id/layoutBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/crypto_card_shape">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="52dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <TextView
                android:id="@+id/labelInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/buttonAsset"
                app:layout_constraintBottom_toTopOf="@+id/labelAlt"
                android:textSize="28sp"
                android:textStyle="bold"
                android:singleLine="true"
                tools:text="1.038020380220000003802" />

            <TextView
                android:id="@+id/labelAlt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelInput"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cardCurrencyIcon"
                android:textColor="@color/white_transparent_75"
                android:layout_marginEnd="4dp"
                tools:text="~ $ 1,3813" />

            <Button
                android:id="@+id/buttonAsset"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="0dp"
                android:background="?selectableItemBackgroundBorderless"
                android:stateListAnimator="@null"
                app:layout_constraintStart_toStartOf="@+id/cardCurrencyIcon"
                app:layout_constraintEnd_toEndOf="@+id/imageCarrot"
                app:layout_constraintTop_toTopOf="@+id/cardCurrencyIcon"
                app:layout_constraintBottom_toBottomOf="@+id/cardCurrencyIcon" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardCurrencyIcon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/labelCurrencyCode"
                app:cardBackgroundColor="@color/white_transparent_25"
                app:cardElevation="0dp"
                app:cardCornerRadius="6dp">

                <ImageView
                    android:id="@+id/imageCurrencyIcon"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    android:padding="4dp"
                    tools:src="@drawable/ic_brd_logo" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/labelCurrencyCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageCarrot"
                android:textStyle="bold"
                android:textAppearance="@style/textAppearanceBody1"
                tools:text="ETH" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageCarrot"
                android:src="@drawable/ic_down_carrot"
                android:rotation="90"
                android:padding="4dp"
                android:contentDescription="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="@color/white_transparent_50" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</com.google.android.material.card.MaterialCardView>
