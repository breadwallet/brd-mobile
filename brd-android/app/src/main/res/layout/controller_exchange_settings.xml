<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hydra_quaternary_background"
    android:animateLayoutChanges="true">

    <TextView
        android:id="@+id/label_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/Exchange.Settings.title"
        android:textSize="20sp"
        android:layout_margin="16dp"
        app:layout_constraintVertical_bias="0"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layout_menu" />

    <ImageButton
        android:id="@+id/buttonClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_close_white_24dp"
        android:contentDescription="@null"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/label_title"
        app:layout_constraintTop_toTopOf="@+id/label_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_title"
        app:layout_constraintBottom_toTopOf="@+id/button_next"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/labelFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="120dp"
            tools:text="ðŸ‡ºðŸ‡¸"
            tools:ignore="SpUsage"
            app:layout_constraintVertical_bias=".2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/cellCountry"
            android:layout_marginBottom="24dp" />

        <include
            android:id="@+id/cellCountry"
            layout="@layout/layout_selection_cell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/labelFlag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/cellRegion"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <include
            android:id="@+id/cellRegion"
            layout="@layout/layout_selection_cell"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/cellCountry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/cellCurrency"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <include
            android:id="@+id/cellCurrency"
            layout="@layout/layout_selection_cell"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/cellRegion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.breadwallet.legacy.presenter.customviews.BRButton
        android:id="@+id/button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@android:color/transparent"
        android:text="@string/Exchange.Settings.applyRegion"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text_size"
        app:buttonColor="@color/ui_accent"
        app:buttonType="1"
        app:hasShadow="false"
        app:isBreadButton="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>
