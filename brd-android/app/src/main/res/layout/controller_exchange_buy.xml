<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hydra_quaternary_background"
    android:animateLayoutChanges="true">

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/buySellToggleGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/buttonClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        tools:checkedButton="@+id/button_buy"
        app:layout_constraintBottom_toBottomOf="@+id/buttonClose"
        android:weightSum="1">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonBuy"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/Exchange.buy"
            app:cornerRadius="6dp"
            style="@style/PreSelectToggleButton"
            android:backgroundTint="@drawable/button_tab_selector"
            android:layout_weight=".5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSell"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            style="@style/PreSelectToggleButton"
            android:text="@string/Exchange.sell"
            android:backgroundTint="@drawable/button_tab_selector"
            app:cornerRadius="6dp"
            android:layout_weight=".5" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <TextView
        android:id="@+id/labelTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="#80FFFFFF"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/buySellToggleGroup"
        app:layout_constraintBottom_toBottomOf="@+id/buySellToggleGroup"
        app:layout_constraintTop_toTopOf="@+id/buySellToggleGroup"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/buttonClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_white_24dp"
        android:background="?selectableItemBackgroundBorderless"
        android:contentDescription="@string/AccessibilityLabels.close"
        android:padding="16dp"
        android:stateListAnimator="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutInputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/layoutPinPad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buySellToggleGroup">

        <TextView
            android:id="@+id/labelSourceAmount"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mobile_font_bold"
            android:singleLine="true"
            android:textSize="48sp"
            android:ellipsize="middle"
            tools:text="$500" />

        <TextView
            android:id="@+id/labelQuoteAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:maxLines="1"
            android:textColor="@color/white_transparent_75"
            tools:text="~ 0.000000 BTC" />

        <TextView
            android:id="@+id/labelError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ui_error"
            tools:text="Error message" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/preSelectToggleGroup"
            android:layout_width="match_parent"
            android:layout_marginTop="24dp"
            android:layout_height="wrap_content"
            android:visibility="visible" >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/firstPreselect"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                tools:text="25%"
                android:backgroundTint="@drawable/button_tab_selector"
                android:insetRight="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/secondPreselect"
                tools:backgroundTint="@color/primary_button_default"
                style="@style/PreSelectToggleButton"
                app:cornerRadius="6dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/secondPreselect"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:backgroundTint="@drawable/button_tab_selector"
                app:lineHeight="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/firstPreselect"
                app:layout_constraintEnd_toStartOf="@+id/thirdPreselect"
                tools:text="50%"
                android:insetRight="5dp"
                app:cornerRadius="6dp"
                style="@style/PreSelectToggleButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/thirdPreselect"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:lineHeight="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/secondPreselect"
                app:layout_constraintEnd_toStartOf="@+id/fourthPreselect"
                android:insetRight="5dp"
                android:backgroundTint="@drawable/button_tab_selector"
                tools:text="75%"
                app:cornerRadius="6dp"
                style="@style/PreSelectToggleButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fourthPreselect"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/thirdPreselect"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="@drawable/button_tab_selector"
                app:lineHeight="20sp"
                app:cornerRadius="6dp"
                tools:text="Max"
                style="@style/PreSelectToggleButton" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/cellQuoteCurrency"
            layout="@layout/layout_selection_cell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <include
            android:id="@+id/cellSelectedOffer"
            layout="@layout/layout_selection_cell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

    <com.breadwallet.legacy.presenter.customviews.BRKeyboard
        android:id="@+id/layoutPinPad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonContinue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutInputContainer" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/Exchange.CTA.next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutPinPad"
        style="@style/PrimaryButton" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/inputGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        app:constraint_referenced_ids="layoutPinPad,layoutInputContainer,buttonContinue" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/errorGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="gone"
        app:constraint_referenced_ids="errorIcon,errorTitle,errorBody,errorButtonContinue" />

    <ImageView
        android:id="@+id/errorIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_circular_layer"
        app:layout_constraintVertical_bias=".4"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@+id/errorTitle"
        app:layout_constraintTop_toBottomOf="@id/buySellToggleGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/errorTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        app:lineHeight="32sp"
        app:layout_constraintStart_toStartOf="@+id/errorButtonContinue"
        app:layout_constraintEnd_toEndOf="@+id/errorButtonContinue"
        android:fontFamily="@font/mobile_font_medium"
        app:layout_constraintBottom_toTopOf="@id/errorBody"
        app:layout_constraintTop_toBottomOf="@+id/errorIcon"
        tools:text="Selling Unavailable" />

    <TextView
        android:id="@+id/errorBody"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        app:lineHeight="24sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintWidth_percent=".8"
        android:layout_marginTop="20dp"
        android:textColor="@color/white_transparent_75"
        app:layout_constraintBottom_toTopOf="@id/errorButtonContinue"
        app:layout_constraintStart_toStartOf="@+id/errorButtonContinue"
        app:layout_constraintEnd_toEndOf="@+id/errorButtonContinue"
        android:fontFamily="@font/mobile_font_medium"
        app:layout_constraintTop_toBottomOf="@+id/errorTitle"
        tools:text="We don’t have a partner that supports selling to {currency} in {Country} yet." />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/errorButtonContinue"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".8"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        tools:text="Change region / currency"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@+id/errorBody"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/PrimaryButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
